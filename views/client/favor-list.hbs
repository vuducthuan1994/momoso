    <!-- Wrapper Start -->
    <div class="wrapper">
        <!-- Preloader Start -->
        <div class="preloader">
            <div class="loading-center">
                <div class="loading-center-absolute">
                    <div class="object object_one"></div>
                    <div class="object object_two"></div>
                    <div class="object object_three"></div>
                </div>
            </div>
        </div>
        <!-- Preloader End -->

        <!-- Header Area Start -->
          {{>client/main-header}}
        <!-- Header Area End -->
        
        <!-- Page Breadcrumb Start -->
        <div class="main-breadcrumb mb-100">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="breadcrumb-content text-center ptb-70">
                            <ul class="breadcrumb-list breadcrumb">
                                <li><a href="/">Trang chủ</a></li>
                                <li><a href="#">Danh sách ưa thích</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- Row End -->
            </div>
            <!-- Container End -->
        </div>
        <!-- Page Breadcrumb End -->
        <!-- Wish List Start -->
        <div class="cart-main-area wish-list pb-50">
            <div class="container">
                <!-- Section Title Start -->
                <div class="section-title mb-50">
                    <h2>danh sách ưa thích </h2>
                </div>
                <!-- Section Title Start End -->
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <!-- Form Start -->
                        <form action="#">
                            <!-- Table Content Start -->
                            <div class="table-content table-responsive">
                                <table>
                                    <thead>
                                        <tr>
                                            <th class="product-remove">Xóa</th>
                                            <th class="product-thumbnail">Ảnh</th>
                                            <th class="product-name">Sản phẩm</th>
                                            <th class="product-price">Giá</th>
                                            <th class="product-quantity">Trạng thái</th>
                                            <th class="product-subtotal">Thêm vào giỏ hàng</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each cart.listFavorProducts}}
                                        <tr id="{{this._id}}">
                                            <td class="product-remove"> <a href="#"><i data-productid="{{this._id}}"  class="remove-wish-list fa fa-times"
                                                        aria-hidden="true"></i></a></td>
                                            <td class="product-thumbnail">
                                                <a href="#"><img src="{{getActiveProductImage this.listImages}}"
                                                        alt="cart-image" /></a>
                                            </td>
                                            <td class="product-name"><a href="#">{{this.name}}</a></td>
                                            <td class="product-price"><span  data-price = "{{this.price}}"class="amount product-price-vnd">{{this.price}}</span></td>
                                            <td class="product-stock-status"><span>
                                            {{#ifEquals this.quantity  0}}
                                            
                                                Hàng Order
                                             {{else}}   
                                             Sẵn hàng
                                             {{/ifEquals}}
                                            </span></td>
                                            <td class="product-add-to-cart"><a class="add-product-to-cart"
                                                    data-product="{{objectToString this}}">thêm ngay</a></td>
                                        </tr>
                                        {{else}}
                                        <tr>
                                            <td colspan="6" class="text-warning">
                                                <p class="text-muted">Bạn chưa thêm sản phẩm nào vào danh sách !</p>
                                            </td>
                                        </tr>
                                        {{/each}}

                                    </tbody>
                                </table>
                            </div>
                            <!-- Table Content Start -->
                        </form>
                        <!-- Form End -->
                    </div>
                </div>
                <!-- Row End -->
            </div>
        </div>
        <!-- Wish List End -->
        <!-- Footer Start -->
        <footer>
            <!-- Footer Middle Start -->
            {{>client/footer/footer-middle}}
            <!-- Footer Middle End -->
            <!-- Footer Bottom Start -->
            {{>client/footer/footer-bottom}}
            <!-- Footer Bottom End -->
        </footer>
        <!-- Footer End -->
    </div>
    <!-- Wrapper End -->

