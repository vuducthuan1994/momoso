    <!-- Best REALTED Start -->
    <div class="best-seller-products pb-100">
        <div class="container">
            <div class="row">
                <!-- Section Title Start -->
                <div class="col-xs-12">
                    <div class="section-title text-center mb-40">
                        <h3 class="section-info">SẢN PHẨM LIÊN QUAN</h3>
                    </div>
                </div>
                <!-- Section Title End -->
            </div>
            <!-- Row End -->
            <div class="row">
                <div class="best-seller new-products owl-carousel">
                    <!-- Single Product Start -->
                    {{#each productsRelated}}
                    <div class="single-product">
                        <!-- Product Image Start -->
                        <div class="pro-img">
                            <a href="{{ createURLProduct this.urlSeo}}">
                                <img class="primary-img" src="{{getAvatarImage 'primary' this.listImages}}"
                                    alt="single-product">
                                <img class="secondary-img" src="{{getAvatarImage 'secendary' this.listImages}}"
                                    alt="single-product">
                            </a>
                            <div class="quick-view">
                                <a data-idproduct="{{this._id}}" class="show-quick-modal" data-target="#myModal"><i
                                        class="pe-7s-look"></i>xem nhanh</a>
                            </div>
                            <span class="sticker-new">{{this.type}}</span>
                        </div>
                        <!-- Product Image End -->
                        <!-- Product Content Start -->
                        <div class="pro-content text-center">
                            <h4><a href="product-page.html">{{this.name}}</a></h4>
                            <p data-price="{{this.price}}" class="price product-price-vnd"><span>{{this.price}}</span>
                            </p>
                            <div class="action-links2">
                                <a data-id="{{this._id}}" class="add-wish-list"
                                    data-toggle="tooltip" title="">thêm vào ds ưa thích</a>
                            </div>
                        </div>
                        <!-- Product Content End -->
                    </div>
                    <!-- Single Product End -->
                    {{/each}}
                </div>
            </div>
            <!-- Row End -->
        </div>
        <!-- Container End -->
    </div>

    <!-- Footer Start -->
