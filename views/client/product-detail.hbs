                        <div id="review" class="tab-pane fade">
                            <!-- Reviews Start -->
                            <div class="review">
                                <div class="block-title">
                                    <strong>Customer Reviews</strong>
                                </div>
                                <ul>
                                    {{#each reviews}}
                                    <li class="review-item">
                                        <h5>{{this.name}}</h5>
                                        <p>{{this.comment}}</p>
                                        <p class="review-date">
                                            <span class="review-details-label">Đăng lúc</span>
                                            <time class="text-muted ">{{getFormattedDate this.created_date}}</time>
                                        </p>
                                    </li>
                                    {{else}}
                                    <p class="mb-10">Sản phẩm này chưa có đánh giá nào !.</p>
                                    {{/each }}
                                </ul>
                                <h2>REVIEW SẢN PHẨM NÀY</h2>
                            </div>
                            <!-- Reviews End -->
                            <!-- Reviews Field Start -->
                            <div class="riview-field mt-30">
                                <form id="formReview" autocomplete="off">
                                    <div class="form-group">
                                        <label class="req" for="sure-name">tên</label>
                                        <input name="name" type="text" class="form-control" id="sure-name" required="">
                                    </div>
                                    <div class="form-group">
                                        <label class="req" for="comments">Nội dung</label>
                                        <textarea name="comment" class="form-control" rows="5" id="comments"
                                            required=""></textarea>
                                        {{!-- <div class="help-block">
                                            <span class="text-danger">Note:</span> HTML is not translated!
                                        </div> --}}
                                    </div>
                                    <div class="form-group required radio-label">
