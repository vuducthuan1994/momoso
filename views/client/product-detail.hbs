    <!-- Page Breadcrumb Start -->
    <div class="main-breadcrumb mb-100">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="breadcrumb-content text-center ptb-70">
                        <h1>{{getCategory product.category}}</h1>
                        <ul class="breadcrumb-list breadcrumb">
                            <li><a href="/">Trang chủ</a></li>
                            <li class="active"><a>Sản phẩm</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Page Breadcrumb End -->
    <!-- Product Thumbnail Start -->
    <div class="main-product-thumbnail pb-100">
        <div class="container">
            <div class="row">
                <div class="col-sm-5">
                    <img id="big-img" src="{{getActiveProductImage product.listImages}}"
                        data-zoom-image="{{getActiveProductImage product.listImages}}" alt="product-image" />

                    <div id="small-img" class="mt-20">

                        <div class="thumb-menu owl-carousel">
                            {{#each product.listImages}}
                            <a href="#" data-image="{{fullPathImage this}}" data-zoom-image={{fullPathImage this}}>
                                <img src={{fullPathImage this}} alt="product-image" />
                            </a>
                            {{/each}}
                        </div>
                    </div>
                </div>
                <!-- Thumbnail Description Start -->
                <div  class="col-sm-7 detail-right">
                    <div class="thubnail-desc fix">
                        <h2 class="product-header">{{product.name}}</h2>
                        <!-- Product Rating Start -->
                        <div class="rating-summary fix mtb-20">
                            <div class="rating f-left mr-10">
                                {{{getStar product.rate}}}
                                
                            </div>
                            <div class="rating-feedback f-left">
                                <a href="#">{{product.totalReview}}</a> /
                                <a href="#review">Đánh giá</a>
                            </div>
                        </div>
                        <!-- Product Rating End -->
                        <!-- Product Price Start -->
                        <div class="pro-price mb-20">
                            <ul class="pro-price-list">
                                <li id="current_price_product" data-price="{{product.price}}" class="price product-price-vnd">{{product.price}}
                                </li>
                                {{!-- <li class="tax">Ex Tax: $199.99</li> --}}
                            </ul>
                        </div>
                        <!-- Product Price End -->
                        <!-- Product Price Description Start -->
                        <div class="product-price-desc">
                            <ul class="pro-desc-list">
                                <li>Mã Sản Phẩm: <span>{{product.code}}</span></li>

                                <li>Trạng thái:

                                    {{#ifEquals product.quantity  0}}
                                    <span class="text-danger"> Đang Restock</span>
                                    {{else}}
                                    <span> Sẵn hàng</span>
                                    {{/ifEquals}}
                                </li>

                                {{#ifEquals product.blocksColor.length  0}}

                                {{else}}
                                <li class="container-list-color">Màu Sắc:
                                    <ul id="small-img">
                                        {{#each product.blocksColor}}
                                        <li title="{{this.colorName}}" data-code="{{this.colorCode}}">
                                            <a href="#" data-image="{{getActiveProductImage this.listImages}}"
                                                data-zoom-image={{getActiveProductImage this.listImages}}>
                                                <img src="{{ getActiveProductImage this.listImages}}">
                                            </a>
                                        </li>
                                        {{/each}}
                                    </ul>
                                </li>
                                {{/ifEquals}}

                                {{#ifEquals product.blocksSize.length  0}}

                                {{else}}
                                <li style="display: none;" class="container-list-size">Kích cỡ :
                                    <ul id="list-size">
                                        {{#each product.blocksSize}}
                                        <li class="out_of_stock" data-code="{{this.sizeCode}}">
                                            <button class="btn">{{this.sizeName}}</button>
                                        </li>
                                        {{/each}}
                                    </ul>
                                </li>
                                {{/ifEquals}}
                            </ul>
                        </div>
                        <!-- Product Price Description End -->
                        <!-- Product Box Quantity Start -->
                        <div class="box-quantity mtb-20">
                            <div class="quantity-item">
                                <label>Số lượng: </label>
                                <div class="cart-plus-minus">
                                    <input id="count_detail" class="cart-plus-minus-box" type="text" name="qtybutton" value="0">
                                </div>
                            </div>
                        </div>
                        <!-- Product Box Quantity End -->
                        <!-- Product Button Actions Start -->
                        <div class="product-button-actions">
                            <button data-id="{{product._id}}" data-type="detail" data-product="{{objectToString product}}"
                                class="add-to-cart add-product-to-cart">thêm giỏ hàng</button>
                            <a data-id="{{product._id}}" data-toggle="tooltip" title="Thêm vào danh sách yêu thích"
                                class="add-wish-list same-btn mr-15"><i class="pe-7s-like"></i></a>
                            {{!-- <button data-toggle="tooltip" title="Compare this Product" class="same-btn"><i
                                    class="pe-7s-repeat"></i></button> --}}
                        </div>
                        <!-- Product Button Actions End -->
                        <!-- Product Social Link Share Start -->

