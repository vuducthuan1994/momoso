<script src="/plugins/ckeditor/ckeditor.js"></script>
<script src="/plugins/validate/jquery.validate.min.js"></script>
<script src="/plugins/select2/select2.min.js"></script>
<link href="/plugins/loaders/custom-loader.css" rel="stylesheet" type="text/css">
<link rel="stylesheet" type="text/css" href="/plugins/select2/select2.min.css">
<style>
    .banner-post,
    .image-upload {
        max-width: 150px;
    }
</style>
<div id="content" class="main-content">
    <div class="">
        <div class="layout-px-spacing">
            <div class="row layout-top-spacing">
                <div id="basic" class="col-lg-12 col-sm-12 col-12 layout-spacing">
                    <div class="statbox widget box box-shadow">
                        <div class="widget-header">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                    {{#if post._id}}
                                    <h4>Sửa bài viết</h4>
                                    {{else}}
                                    <h4>Thêm bài viết</h4>
                                    <div id="my-app">

                                        {{/if}}
                                    </div>
                                </div>
                            </div>
                            <div class="widget-content widget-content-area">
                                {{#each errors}}
                                {{>admin/flash-message/error}}
                                {{/each}}
                                {{#each messages}}
                                {{>admin/flash-message/success}}
                                {{/each}}
                                <div class="row">
                                    <div class="col-lg-10 col-10 col-md-10 mx-auto">
                                        <form id="formPost" enctype="multipart/form-data" method="post">
                                            <div class="form-group">
                                                <label>Tiêu đề bài viết</label>
                                                <input  id="post-name" value="{{post.title}}" type="text" name="title"
                                                    placeholder="Enter title of post ..." class="form-control"
                                                    required="">
                                            </div>
                                                <div class=" form-group">
                                                <label>URL SEO</label>
                                                <input id="post-url-seo" value="{{post.urlSeo}}" type="text"
                                                    minlength="5" name="urlSeo"
                                                    placeholder="Enter unique URL SEO of post..."
                                                    class="form-control" required="">
                                                <small id="emailHelp" class="form-text text-warning">Hạn chế tối đa việc
                                                    sửa URL SEO</small>

                                                <small id="emailHelp" class="form-text text-success">URL SEO CŨ:
                                                    {{post.urlSeo}}</small> 
                                                    </div>

                                            <div class="form-group">
                                                <div class="input-group mb-4">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text">Mô tả ngắn ( Viết dài hơn 20 từ)
                                                        </span>
                                                    </div>
                                                    <textarea minlength="80" required=""
                                                        placeholder="Enter short desc... " name="short_desc"
                                                        class="form-control"
                                                        aria-label="With textarea">{{post.short_desc}}</textarea>
                                                </div>
                                            </div>

                                            {{!-- <div id="app1">
                                                <test :myprop="text"></test>
                                                <button @click="text = 'Another text'">Change text</button>
                                            </div> --}}


                                            <div class="form-group ">
                                                <label>Công khai</label>
                                                <br>
                                                <label class="switch s-primary mr-2">
                                                    <input {{checked post.isPublic }} name="isPublic" type="checkbox">
                                                    <span class="slider round"></span>
                                                </label>
                                            </div>

                                            <div class="form-group ">
                                                <label> LOẠI BÀI VIẾT</label>
                                                <select id="post-category" data-selected="{{categorySelected}}"
                                                    required="" data-categorys="{{categorys}}" name="category"
                                                    class="form-control col-md-6">
                                                </select>

                                            </div>

                                            <div class="form-group ">
                                                <label>Ảnh đại diện</label>
                                                <input accept="image/jpeg,image/gif,image/png,image/x-eps"
                                                    name="banner_image" type="file" class="form-control-file col-md-3">
                                                <div class="row col-md-6 mt-1">
                                                    <img data-thumb = "{{post.thumb_image}}" data-banner="{{post.banner_image}}" src="{{post.thumb_image}}"
                                                        class="banner-post" alt=" Chưa có ảnh !" class="img-fluid"
                                                        src="#">
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label>Nội dung </label>
                                                <textarea name="body" id="post-content" class="ckeditor" required=""
                                                    value="hahaha" placeholder="Enter short description of post ...">
                                            {{{post.body}}}
                                        </textarea>
                                            </div>

                                        </form>

                                        {{#if post._id}}
                                        <button data-postid="{{post._id}}"
                                            class="submitForm btn btn-secondary btn-lg mb-3 mr-3">
                                            <div
                                                class=" d-none spinner-grow text-white mr-2 align-self-center loader-sm">
                                            </div>
                                            Update
                                        </button>
                                        {{else}}
                                        <button class="submitForm btn btn-secondary btn-lg mb-3 mr-3">
                                            <div
                                                class="d-none spinner-grow text-white mr-2 align-self-center loader-sm">
                                            </div>
                                            Create
                                        </button>
                                        {{/if}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>



    </div>
    {{>admin/footer}}

</div>

