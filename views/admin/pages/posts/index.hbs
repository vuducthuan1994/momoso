<style>
    .banner-post {
        max-width: 150px;
    }

    table tbody td.title-custom {
        font-size: 15px;
        font-weight: 600;
        color: #e2a03f;
    }

    td {
        max-width: 200px;
        word-break: break-all;
        text-align: left;
    }
