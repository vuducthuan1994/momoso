<style>
    table tbody p.title-custom {
        font-size: 15px;
        font-weight: 600;
        color: #e2a03f;
    }

    td p {
        max-width: 150px;
        word-break: break-all;
        text-align: left;
    }
</style>
<!--  BEGIN CONTENT AREA  -->
<div id="content" class="main-content">

    <div class="layout-px-spacing">
        {{#each errors}}
        {{>admin/flash-message/error}}
        {{/each}}
        {{#each messages}}
        {{>admin/flash-message/success}}
        {{/each}}
        <div class="row layout-top-spacing layout-spacing">
            <div class="col-lg-12">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>Danh sách tin nhắn</h4>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content widget-content-area">
                        <div class="table-responsive mb-4">
                            <div>
                                <table id="style-3" class="table style-3  table-hover">
                                    <thead>
                                        <tr>
                                            <th>STT</th>
                                            <th>Tên</th>
                                            <th>Email</th>
                                            <th>Website</th>
                                            <th>Tiêu Đề</th>
                                            <th>Nội dung</th>
                                            <th>Time</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each contacts}}
                                        <tr>
                                            <td class="checkbox-column"> {{@index}}</td>
                                            <td>
                                                <p class=" title-custom"> {{this.name}}</p>
                                            </td>
                                            <td>
                                                {{this.email}}
                                            </td>
                                            <td>{{this.website}}</td>
                                            <td>
                                                <p> {{this.subject}}</p>
                                            </td>
                                            <td>
                                                <p> {{this.message}}</p>
                                            </td>
                                            <td>
                                                <div class="mt-2 mb-2">
                                                    <span class="badge badge-secondary">Ngày gửi</span>
                                                    <br>
                                                    <span class="text-muted">{{ formatDate this.created_date}} </span>
                                                </div>
                                            </td>
                                            <td>
                                                <ul class="table-controls">
                                                    <li><a href="/admin/contact/delete/{{this._id}}" title="Xóa tin này"
                                                            class="bs-tooltip" data-toggle="tooltip"
                                                            data-placement="top" title=""
                                                            data-original-title="Delete"><svg
                                                                xmlns="http://www.w3.org/2000/svg" width="24"
                                                                height="24" viewBox="0 0 24 24" fill="none"
                                                                stroke="currentColor" stroke-width="2"
                                                                stroke-linecap="round" stroke-linejoin="round"
                                                                class="feather feather-trash p-1 br-6 mb-1">
                                                                <polyline points="3 6 5 6 21 6"></polyline>
                                                                <path
                                                                    d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2">
                                                                </path>
                                                            </svg></a></li>
                                                </ul>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{>admin/footer}}
    </div>
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="/plugins/table/datatable/datatables.js"></script>
