<!--  BEGIN CONTENT AREA  -->

<script src="/plugins/ckeditor/ckeditor.js"></script>

<div id="content" class="main-content">
    <div class="">
        <div class="layout-px-spacing">
            <div class="row layout-top-spacing">
                <div id="basic" class="col-lg-12 col-sm-12 col-12 layout-spacing">
                    <div class="statbox widget box box-shadow">
                        <div class="widget-header">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                    {{#if storage._id}}
                                    <h4>Sửa Kho</h4>
                                    {{else}}
                                    <h4>Thêm Kho</h4>
                                    {{/if}}
                                </div>
                            </div>
                            <div class="widget-content widget-content-area">
                                {{#each errors}}
                                {{>admin/flash-message/error}}
                                {{/each}}
                                {{#each messages}}
                                {{>admin/flash-message/success}}
                                {{/each}}
                                <div class="row">
                                    <div class="col-lg-10 col-10 col-md-10 mx-auto">
                                        <form action="{{buildActionStorage storage._id}}" method="post">
                                            <div class="form-group">
                                                <label>Tên Kho </label>
                                                <input value="{{storage.name}}" type="text" name="name"
                                                    placeholder="Tên Kho..." class="form-control" required="">
                                            </div>
                                            <div class="form-group">
                                                <label>Tên viết tắt </label>
                                                <input value="{{storage.shortcutName}}" type="text" name="shortcutName"
                                                    placeholder="Tên viết tắt..." class="form-control" required="">
                                            </div>
                                            <div class="form-group">
                                                <label>Địa chỉ kho hàng </label>
                                                <input value="{{storage.address}}" type="text" name="address"
                                                    placeholder="Địa chỉ kho hàng..." class="form-control" required="">
                                            </div>
                                            <div class="form-group">
                                                <div class="input-group mb-4">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text">Ghi chú
                                                        </span>
                                                    </div>
                                                    <textarea minlength="0" required="" placeholder="Enter note... "
                                                        name="note" class="form-control"
                                                        aria-label="With textarea">{{storage.note}}</textarea>
                                                </div>

                                            </div>
                                            <div class="form-group">
                                                <label>Số điện thoại</label>
                                                <input type="number" name="phone_number"
                                                    placeholder="Enter Phone Number..." value="{{storage.phone_number}}"
                                                    class="form-control" required="">
                                            </div>
                                            {{#if storage._id}}
                                            <input type="submit" class="mt-4 btn btn-primary" value="Update">
                                            {{else}}
                                            <input type="submit" class="mt-4 btn btn-primary" value="Create">
                                            {{/if}}
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{>admin/footer}}

</div>

<!--  END CONTENT AREA  -->