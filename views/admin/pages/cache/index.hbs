<!-- BEGIN PAGE LEVEL STYLES -->
<link href="/assets/css/tables/table-basic.css" rel="stylesheet" type="text/css">
<!-- END PAGE LEVEL STYLES -->

<!--  BEGIN CONTENT AREA  -->
<div id="content" class="main-content">
    <div class="layout-px-spacing">
        {{#each messages }}
        {{>admin/message}}
        {{/each}}
        <div class="row layout-top-spacing">
            <div id="tableHover" class="col-lg-12 col-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>Quản lý bộ nhớ cache</h4>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content widget-content-area">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover mb-4">
                                <thead>
                                    <tr>
                                        <th>Hits</th>
                                        <th>misses:</th>
                                        <th>keys:</th>
                                        <th>Kích cỡ Key</th>
                                        <th>Kích cỡ value</th>
                                        <th>Dung lượng server</th>
                                        <th>Action</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>{{cache.hits}}</td>
                                        <td>{{cache.misses}}</td>
                                        <td>{{cache.keys}}</td>
                                        <td>{{bytesToSize cache.ksize}}</td>
                                        <td>{{ cache.vsize}} Bytes</td>
                                        <td class="text-center">
                                            <div class="mb-1">
                                                <span class="text-info">Ổ cứng </span>
                                                <bold>{{disk.diskPath}} </bold>
                                            </div>
                                            <div class="mt-1">
                                                <span class="text-danger">Free</span>

                                                <b>{{bytesToSize disk.free }} </b>
                                            </div>
                                            <div class="mt-1">
                                                <span class="text-primary">Size</span>

                                                <bold>{{bytesToSize disk.size }} </bold>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <a title="Xóa hết cache" href="/admin/cache/delete">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                                    viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                                    stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                                                    class="feather feather-trash-2 icon">
                                                    <polyline points="3 6 5 6 21 6"></polyline>
                                                    <path
                                                        d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2">
                                                    </path>
                                                    <line x1="10" y1="11" x2="10" y2="17"></line>
                                                    <line x1="14" y1="11" x2="14" y2="17"></line>
                                                </svg>
                                            </a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
    {{>admin/footer}}

</div>
<!--  END CONTENT AREA  -->